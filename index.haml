!!!
%html
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }

    %script{ :type => "text/javascript", :src => "jquery-1.3.2.min.js" }
    %script{ :type => "text/javascript", :src => "flowplayer-3.1.0.min.js" }
    %script{ :type => "text/javascript", :src => "flowplayer.playlist-3.0.5.min.js" }

    %link{ :href => "style.css", :rel => "stylesheet", :type => "text/css" }

    %title
      SubThing

  %body
    #page
      %h1
        SubThing

      %script{:type => 'text/javascript'}
        $(function() {$f("player", "flowplayer-3.1.0.swf", {clip: {baseUrl: './'}}).playlist("#subs");});

      %a#player{:style => "display:block;width:400px;height:300px"}
      
      #subs
        - subs.each do |sub|
          %a{:href => "#{sub.from.to_s.gsub(/:/, '-').gsub(/,/, '_')}.flv"}
            %span.from= sub.from
            %span.to= sub.to
            %span.text= sub.sub
