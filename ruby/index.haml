!!!
%html
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }

    %script{ :type => "text/javascript", :src => "flowplayer-3.1.0.min.js" }
    %script{ :type => "text/javascript", :src => "jquery-1.3.2.min.js" }
    %script{ :type => "text/javascript"}
      jQuery(function($) { $('#subs a').click(function(e) { $('#player').attr('href', $(e.currentTarget).attr('href')); e.preventDefault(); }) });

    %link{ :href => "style.css", :rel => "stylesheet", :type => "text/css" }

    %title
      SubThing

  %body
    #page
      %h1
        SubThing

      %a#player{ :href => '', :style => "display:block;width:400px;height:300px" }
      
      %script{:type => 'text/javascript'}
        flowplayer('player', 'flowplayer-3.1.0.swf');

      %ul#subs
        - subs.each do |sub|
          %li
            %span.from= sub.from
            %span.to= sub.to
            %a{:href => "#{sub.from.to_s.gsub(/:/, '-').gsub(/,/, '_')}.flv"}= sub.sub
